{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "10gb",
      "maxAge": "1d",
      "minPrimarySize": "3gb"

    }
  },
  "warm": {
    "minAge": "0ms",
    "setPriority": 50,
    "shrink": {
      "maxPrimarySize": "65gb",
      "allowWriteAfterShrink": true
    },
    "forceMerge": {
      "maxSegments": 1,
      "indexCodec": "best_compression"
    }
  },
  "delete": {
    "minAge": "5d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "cloud-snapshot-policy"
  }
}
