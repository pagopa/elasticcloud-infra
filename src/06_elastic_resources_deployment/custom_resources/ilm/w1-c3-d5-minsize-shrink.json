{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "20gb",
      "maxAge": "1d",
      "minPrimarySize": "10gb"

    }
  },
  "warm": {
    "minAge": "1d",
    "setPriority": 50,
    "shrink": {
      "maxPrimarySize": "65gb",
      "allowWriteAfterShrink": true
    }
  },
  "cold": {
    "minAge": "3d",
    "setPriority": 0,
    "allocate": {
      "numberOfReplicas": 0
    }
  },
  "delete": {
    "minAge": "5d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "${snapshot_policy}"
  }
}
