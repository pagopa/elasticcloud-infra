{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "10gb",
      "maxAge": "1d",
      "minPrimarySize": "100mb"
    },
    "shrink": {
      "maxPrimarySize": "65gb",
      "allowWriteAfterShrink": true
    },
    "forceMerge": {
      "maxSegments": 1,
      "indexCodec": "best_compression"
    }
  },
  "cold": {
    "minAge": "0ms",
    "setPriority": 0,
    "allocate": {
      "numberOfReplicas": 0
    }
  },
  "delete": {
    "minAge": "7d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "${snapshot_policy}"
  }
}
