{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "10gb",
      "maxAge": "5d"
    }
  },
  "warm": {
    "minAge": "0ms",
    "setPriority": 50,
    "shrink": {
      "maxPrimarySize": "65gb",
      "allowWriteAfterShrink": true
    },
    "forceMerge": {
      "maxSegments": 1,
      "indexCodec": "best_compression"
    }
  },
  "delete": {
    "minAge": "7d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "${snapshot_policy}"
  }
}
