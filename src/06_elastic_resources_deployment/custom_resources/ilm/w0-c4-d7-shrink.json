{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "10gb",
      "maxAge": "5d"
    }
  },
  "warm": {
    "minAge": "0ms",
    "setPriority": 50,
    "shrink": {
      "maxPrimarySize": "50gb",
      "allowWriteAfterShrink": true
    }
  },
  "cold": {
    "minAge": "4d",
    "setPriority": 0,
    "allocate": {
      "numberOfReplicas": 0
    }
  },
  "delete": {
    "minAge": "7d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "${snapshot_policy}"
  }
}
