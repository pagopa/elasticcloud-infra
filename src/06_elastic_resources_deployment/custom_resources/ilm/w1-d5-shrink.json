{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "10gb",
      "maxAge": "1d"
    }
  },
  "warm": {
    "minAge": "0ms",
    "setPriority": 50,
    "forceMerge": {
      "maxSegments": 1,
      "indexCodec": "best_compression"
    },
    "shrink": {
      "maxPrimarySize": "65gb",
      "allowWriteAfterShrink": true
    }
  },
  "delete": {
    "minAge": "5d",
    "deleteSearchableSnapshot": true
  }
}
