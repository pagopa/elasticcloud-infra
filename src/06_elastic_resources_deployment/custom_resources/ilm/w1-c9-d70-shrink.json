{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "20gb",
      "maxAge": "1d"
    }
  },
  "warm": {
    "minAge": "1d",
    "setPriority": 50,
    "shrink": {
      "maxPrimarySize": "65gb",
      "allowWriteAfterShrink": false
    },
    "forceMerge": {
      "maxSegments": 1,
      "indexCodec": "best_compression"
    }
  },
  "cold": {
    "minAge": "9d",
    "setPriority": 0,
    "allocate": {
      "numberOfReplicas": 0
    }
  },
  "delete": {
    "minAge": "70d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "${snapshot_policy}"
  }
}
