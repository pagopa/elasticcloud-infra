{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "20gb",
      "maxAge": "1d"
    }
  },
  "warm": {
    "minAge": "2d",
    "setPriority": 50,
    "shrink": {
      "maxPrimarySize": "65gb",
      "allowWriteAfterShrink": true
    },
    "forceMerge": {
      "maxSegments": 1,
      "indexCodec": "best_compression"
    }
  },
  "cold": {
    "minAge": "8d",
    "setPriority": 0,
    "allocate": {
      "numberOfReplicas": 0
    }
  },
  "delete": {
    "minAge": "30d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "${snapshot_policy}"
  }
}
