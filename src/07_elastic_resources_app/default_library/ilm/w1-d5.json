{
  "hot": {
    "minAge": "0ms",
    "rollover": {
      "maxPrimarySize": "20gb",
      "maxAge": "1d",
      "minPrimarySize": "5gb"
    }
  },
  "warm": {
    "minAge": "0ms",
    "setPriority": 50,
    "shrink": {
      "maxPrimarySize": "50gb",
      "allowWriteAfterShrink": true
    },
    "forceMerge": {
      "maxSegments": 1,
      "indexCodec": "best_compression"
    }
  },
  "delete": {
    "minAge": "5d",
    "deleteSearchableSnapshot": true,
    "waitForSnapshot": "${snapshot_policy}"
  }
}
